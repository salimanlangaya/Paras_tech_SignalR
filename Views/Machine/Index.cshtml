@model IEnumerable<Paras_tech_SignalR.Models.Machine>

@{
    ViewData["Title"] = "Index";
}

<h1>Machine Master Listing</h1>

<table class="table" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MachineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody >
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MachineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="EditStatus" asp-route-id="@item.MachineID">Edit</a> 
            </td>
        </tr>
}
    </tbody>
</table>
